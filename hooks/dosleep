#!/usr/bin/env bash

#
# Filename:       /etc/libvirt/hooks/dosleep
# Description:    Allow host sleep while libvirt domain is sleeping.
# Author(s):      Alex Portell <github.com/portellam>
# Maintainer(s):  Alex Portell <github.com/portellam>
#

HOOK_NAME="dosleep"
PREFIX_ERROR="An error occurred:"
PREFIX_PROMPT="libvirt-qemu ${HOOK_NAME}:"
DOMAIN_NAME="${1}"
OPERATION="${2}"

function start_service
{
  if ! systemctl enable libvirt-dosleep@"${DOMAIN_NAME}" &> /dev/null; then
    echo "${PREFIX_PROMPT} ${PREFIX_ERROR} Failed to enable 'libvirt-dosleep@${DOMAIN_NAME}' service." >&2
    return 1
  fi

  if ! systemctl start libvirt-dosleep@"${DOMAIN_NAME}" &> /dev/null; then
    echo "${PREFIX_PROMPT} ${PREFIX_ERROR} Failed to start 'libvirt-dosleep@${DOMAIN_NAME}' service." >&2
    return 1
  fi

  echo "${PREFIX_PROMPT} Started 'libvirt-dosleep@${DOMAIN_NAME}' service."
}

function stop_service
{
  if ! systemctl disable libvirt-dosleep@"${DOMAIN_NAME}" &> /dev/null; then
    echo "${PREFIX_PROMPT} ${PREFIX_ERROR} Failed to disable 'libvirt-dosleep@${DOMAIN_NAME}' service." >&2
    return 1
  fi

  if ! systemctl stop libvirt-dosleep@"${DOMAIN_NAME}" &> /dev/null; then
    echo "${PREFIX_PROMPT} ${PREFIX_ERROR} Failed to stop 'libvirt-dosleep@${DOMAIN_NAME}' service." >&2
    return 1
  fi

  echo "${PREFIX_PROMPT} Stopped 'libvirt-dosleep@${DOMAIN_NAME}' service."
}

case "${OPERATION}" in
  "prepare")
    start_service ;;
  "release")
    stop_service ;;
esac